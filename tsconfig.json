{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@app/*": ["app/*"],

      "@features": ["features/index.ts"],
      "@features/*": ["features/*"],

      "@components/*": ["components/*"],
      "@components-ui": ["components/ui/index.ts"],
      "@components-ui/*": ["components/ui/*"],
      "@components-layout": ["components/layout/index.ts"],
      "@components-layout/*": ["components/layout/*"],
      "@components-providers": ["components/providers/index.ts"],
      "@components-providers/*": ["components/providers/*"],

      "@shared/*": ["shared/*"],

      "@shared-api/*": ["shared/api/*"],

      "@shared-lib": ["shared/lib/index.ts"],
      "@shared-lib/*": ["shared/lib/*"],

      "@shared-constants": ["shared/constants/index.ts"],
      "@shared-constants/*": ["shared/constants/*"],

      "@shared-utils": ["shared/utils/index.ts"],
      "@shared-utils/*": ["shared/utils/*"],

      "@shared-hooks": ["shared/hooks/index.ts"],
      "@shared-hooks/*": ["shared/hooks/*"],

      "@shared-store": ["shared/store/store.ts"],
      "@shared-store/*": ["shared/store/*"],

      "@shared-config": ["shared/config/index.ts"],
      "@shared-config/*": ["shared/config/*"],

      "@shared-types": ["shared/types/index.ts"],
      "@shared-types/*": ["shared/types/*"],

      "@styles/*": ["styles/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
